<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TouchBehaviorRelativeBinding.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TouchBehaviorRelativeBinding"
    xmlns:pages="clr-namespace:TouchBehaviorRelativeBinding.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="TouchBehaviorRelativeBinding">

    <ShellContent
        Title="Landing"
        ContentTemplate="{DataTemplate pages:LandingPage}" />
    
    <ShellContent
        ContentTemplate="{DataTemplate pages:ReferencePage}" />
    
    <ShellContent
        ContentTemplate="{DataTemplate pages:RelativeSourcePage}" />

</Shell>
